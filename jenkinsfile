pipeline {
    agent any
    
    environment {
        LABS = credentials('lab')
        JAVA_HOME = '/opt/bitnami/java' // Set your JAVA_HOME path
        PATH = "${JAVA_HOME}/bin:${env.PATH}" // Add Java binaries to PATH
    }
    
    stages {
        stage('Setup Virtual Environment') {
            steps {
                script {
                    // Create a virtual environment
                    sh 'python3 -m venv retail_pipeline_venv'
                    
                    // Upgrade pip and install pipenv in the virtual environment
                    sh './retail_pipeline_venv/bin/pip install --upgrade pip'
                    sh './retail_pipeline_venv/bin/pip install pipenv'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Install project dependencies using pipenv
                    sh './retail_pipeline_venv/bin/pipenv install'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Display JAVA_HOME and PATH for debugging
                    sh 'echo $JAVA_HOME'
                    sh 'echo $PATH'
                    
                    // Run tests using pytest
                    sh './retail_pipeline_venv/bin/pipenv run pytest'
                }
            }
        }

        stage('Package') {
            steps {
                script {
                    // Create the zip file but exclude the virtual environment directory
                    sh 'zip -r retailproject.zip . -x "retail_pipeline_venv/*"'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Securely copy the packaged
